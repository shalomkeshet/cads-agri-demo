{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@db/*": ["packages/db/*"],
        "@auth/*": ["packages/auth/*"],
        "@dci/*": ["packages/dci-engine/*"],
        "@shared/*": ["packages/shared/*"]
      }
    }
  }
  