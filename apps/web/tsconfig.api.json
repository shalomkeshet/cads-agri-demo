{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "noEmit": true,
      "skipLibCheck": true,
  
      "baseUrl": "../../",
      "paths": {
        "@auth/*": ["packages/auth/*"],
        "@db/*": ["packages/db/*"],
        "@dci/*": ["packages/dci-engine/*"],
        "@shared/*": ["packages/shared/*"]
      },
  
      "types": ["node"]
    },
    "include": ["api/**/*", "../../packages/**/*"]
  }
  