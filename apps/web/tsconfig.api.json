{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@auth/*": ["api/_lib/auth/*"],
      "@db/*": ["api/_lib/db/*"],
      "@dci/*": ["api/_lib/dci/*"]
    }
  },
  "include": ["api/**/*"]
}
