{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@auth/*": ["api/_lib/auth/*"],
      "@db/*": ["api/_lib/db/*"],
      "@dci/*": ["api/_lib/dci/*"]
    },

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "types": ["vite/client"],
    "skipLibCheck": true,

    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": ["src"]
}
